@model Projeto.Presentation.Mvc.Models.ContaEdicaoModel
@using Projeto.Domain

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h5>Atualização de Conta</h5>
<hr />

@using (Html.BeginForm())
{

    <div>
        @Html.HiddenFor(model => model.Id)
    </div>

    <div class="row">
        <div class="col-md-4">
            <label>Nome da Conta:</label>
            @Html.TextBoxFor(model => model.Nome,
                new { @class = "form-control", @placeholder = "Digite aqui" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
            <br />

            <label>Data da Conta:</label>
            @Html.TextBoxFor(model => model.Data,
                new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
            <br />

            <label>Valor da Conta:</label>
            @Html.TextBoxFor(model => model.Valor,
                new { @class = "form-control", @placeholder = "Digite aqui" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Valor)
            </span>
            <br />

            <label>Descrição da Conta:</label>
            @Html.TextAreaFor(model => model.Descricao,
                new { @class = "form-control", @placeholder = "Digite aqui" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
            <br />

            <input type="submit" value="Atualizar Conta"
                   class="btn btn-primary" />
        </div>
        <div class="col-md-3">
            <label>Categoria da Conta:</label>
            @Html.DropDownListFor(model => model.Categoria,
                               Html.GetEnumSelectList(typeof(CategoriaConta)),
                               new { @class = "form-control" })
            <br />

            <label>Tipo da Conta:</label>
            @Html.DropDownListFor(model => model.Tipo,
                               Html.GetEnumSelectList(typeof(TipoConta)),
                               new { @class = "form-control" })

        </div>
    </div>
}